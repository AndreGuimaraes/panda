<h1>Select a screenshot to use for this video</h1>

<ul id="screenshots">
  <% @percentages.each do | percentage |%>
    <li><%= link_to image_tag("/images/tmp/#{@video.tmp_thumbnail_for_selection_filename(percentage)}"), "/videos/#{@video.key}/save_thumbnail?percentage=#{percentage}&iframe=#{params[:iframe]}" %></li>
  <% end %>
</ul>