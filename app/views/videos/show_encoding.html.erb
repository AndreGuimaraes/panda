<h2><%= @video.original_filename %></h2>

<dl>
	<dt>Key:</dt>
	<dd><%= @video.key %></dd>
	<dt>Duration:</dt>
	<dd><%= @video.duration_str %></dd>
</dl>

	<h3><%= @video.profile_title %></h3>
	
	<div class="video">
	<% if @video.status == "success" %>
		<%= @video.embed_html %>
	<% elsif @video.status == "error" %>
	    <div class="response">There was an error @videooding to this format. We have been notified and will look into the issue immediately.</div>
	<% else %>
		<div class="response">Once uploaded and @videooded the video will be displayed here.</div>
	<% end %>
	</div>
	
	<div class="embed_code">
		<h4>Embed code</h4>
		<textarea cols="50" rows="6"><%= @video.embed_html %></textarea>
	</div>
